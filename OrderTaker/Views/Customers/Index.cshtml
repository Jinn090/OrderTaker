@model OrderTaker.Models.Customer
@{
    ViewData["Title"] = "Customers";
}

<h1>Index</h1>

<p>
    @*<button id="create-customer" type="button" class="btn btn-link">Create New</button>*@
    <button id="create-customer"
            class="btn btn-link"
            type="button"
            data-bs-toggle="modal"
            data-bs-target="#modal-customer"
            data-url="@Url.Action("Create")">
        Create New
    </button>
</p>

<table id="dt-customer"
       class="table table-striped table-bordered dt-responsive nowrap"
       width="100%"
       cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>Action</th>
        </tr>
    </thead>
</table>

<partial name="_ModalPartial" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/customer.js"></script>
}