@model OrderTaker.Models.ViewModel.OrderTakingViewModel
@using Microsoft.AspNetCore.Identity
@using OrderTaker.Data
@inject UserManager<User> UserManager
<div class="modal fade" id="modal-order-item" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="form-order-item" action="api/orders/skus/create" method="POST">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="PurchaseItem.Quantity" class="control-label"></label>
                                <input step="1" min="1" asp-for="PurchaseItem.Quantity" class="form-control" />
                                <span asp-validation-for="PurchaseItem.Quantity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="PurchaseItem.Price" class="control-label"></label>
                                <input asp-for="PurchaseItem.Price" class="form-control" disabled />
                                <span asp-validation-for="PurchaseItem.Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div>
                        <div class="col-12">
                            <table id="dt-sku-list"
                                   class="table table-striped table-bordered dt-responsive nowrap"
                                   width="100%"
                                   cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SelectedSKU.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SelectedSKU.Code)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SelectedSKU.UnitPrice)
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
